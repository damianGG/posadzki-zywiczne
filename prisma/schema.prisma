generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model ProductKit {
  id          String   @id @default(cuid())
  sku         String   @unique
  name        String
  description String?
  type        String   // "EP" or "PU"
  bucketSize  Int      // 10, 20, 30, 40, 50, 60, 80, 100
  hasR10      Boolean  @default(false)
  color       String?
  basePrice   Float    // Base price in PLN
  r10Surcharge Float   @default(0) // R10 surcharge in PLN
  stock       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  orderItems  OrderItem[]
  
  @@index([sku])
  @@index([type, bucketSize])
}

model Order {
  id              String   @id @default(cuid())
  orderNumber     String   @unique
  customerName    String
  customerEmail   String
  customerPhone   String
  customerAddress String
  customerCity    String
  customerZip     String
  
  paymentMethod   String   // "przelewy24" or "cod"
  paymentStatus   String   @default("pending") // "pending", "paid", "failed", "cancelled"
  paymentId       String?  // Przelewy24 transaction ID
  
  totalAmount     Float
  currency        String   @default("PLN")
  
  status          String   @default("new") // "new", "processing", "shipped", "delivered", "cancelled"
  notes           String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  items           OrderItem[]
  
  @@index([orderNumber])
  @@index([customerEmail])
  @@index([paymentStatus])
  @@index([status])
}

model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  productKitId String
  productKit   ProductKit @relation(fields: [productKitId], references: [id])
  
  quantity    Int      @default(1)
  price       Float    // Price at time of order
  
  createdAt   DateTime @default(now())
  
  @@index([orderId])
  @@index([productKitId])
}
