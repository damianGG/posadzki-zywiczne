generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ProductKit {
  id          String   @id @default(cuid())
  sku         String   @unique
  name        String
  type        String   // EP or PU
  bucketSize  Int      // 10, 20, 30, 40, 50, 60, 80, 100
  hasR10      Boolean  @default(false)
  color       String?
  basePrice   Float    // Base price in PLN
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  orderItems  OrderItem[]
}

model Order {
  id              String   @id @default(cuid())
  orderNumber     String   @unique
  customerName    String
  customerEmail   String
  customerPhone   String
  customerAddress String
  customerCity    String
  customerZip     String
  
  paymentMethod   String   // COD or PRZELEWY24
  paymentStatus   String   @default("pending") // pending, paid, failed, cancelled
  orderStatus     String   @default("new") // new, processing, completed, cancelled
  
  totalAmount     Float
  
  przelewy24TransactionId String?
  przelewy24OrderId       String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  items           OrderItem[]
}

model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  productKitId String
  quantity    Int      @default(1)
  price       Float    // Price at time of order
  
  order       Order      @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productKit  ProductKit @relation(fields: [productKitId], references: [id])
  
  createdAt   DateTime @default(now())
  
  @@index([orderId])
  @@index([productKitId])
}
